     <!-- HOME -->
     <section id="home">
        <div class="overlay"></div>
          <div class="container">
               <div class="row">
                    <div class="col-md-12 col-sm-12">
                         <div class="home-info">
                              <h1>Welcome to CU Par! <br>Come and find your new partners here!</h1>
                              <h1></h1>
                              <div class="subscribe-form">
                                <form method="POST" action="http://localhost:8081/login/reset">
                                  {{#if this.info}}
                                <div class="my-notify-info">{{this.info}}</div>
                                {{else if this.message}}
                                <div class="my-notify-success">{{this.message}}</div>
                                {{else if this.warning}}
                                <div class="my-notify-warning">{{this.warning}}</div>
                                {{else if this.error }}
                                <div class="my-notify-error">{{error}}</div>
                                {{/if}}
                                {{#if this.notice}}
                                <div class="my-notify-success">{{this.notice}}</div>
                                {{/if}}<br>
                                <input type="number" name="sid" class="form-control" placeholder="Enter your student ID" required="" id="sid" maxlength="10" minlength="10">                         
                                <br>
                                <div class="col-xs-6">
                                  <input type='text' name="code" class="form-control-my" placeholder="   code" required="" id="code" maxlength="6">
                                </div>
                                <div class="col-xs-1">   
                                </div>
                                <div class="col-xs-5">
                                  <input type="button" name="sendcode" class="form-control-my" id="sendcode" value="Send" onclick="getSID()" >
                                </div> <br> <br> <br>
                                  <input type="submit" value="confirm" class="form-control" id="bt" />
                                </div> <br>
                                </form>
                                {{#if this.message}}
                               <p style="color:white">Go back to <a href="/signup">sign-up</a> to active your account</p>
                              {{/if}}
                              <p style="color:white">click <a href="/login">here</a> go back to login</p>  
                              </div>    
                         </div>
                    </div>
               </div>
          </div>
     </section>

