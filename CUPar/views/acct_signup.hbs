<html lang="en">
 <head>

     <title>sign-up page of CU Par</title>

     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=Edge">
     <meta name="description" content="">
     <meta name="keywords" content="">
     <meta name="team" content="">
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <link rel="stylesheet" href="http://localhost:8081/css/bootstrap.min.css">
     <link rel="stylesheet" href="http://localhost:8081/css/vegas.min.css">
     <link rel="stylesheet" href="http://localhost:8081/css/font-awesome.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="http://localhost:8081/css/templatemo-style.css">
 </head>
 <body>

    <div class="menu-bg"></div>
    <div class="menu-burger">â˜°</div>

    <div class="menu-items">
       <div class="container">
         <div class="row"> 
           <div class="col-md-offset-2 col-md-4 col-sm-6">
            <h1 style="text-align:center;font-size: 40px">About us</h1>
            <p style="color: white;text-align: center;font-size: 18px">We are CU Par!</p>
            <p style="color: white;text-align: center;font-size: 18px ">Join us and find your partners here!</p>
           </div>
         </div>
       </div>
    </div>


     <!-- SIGN UP -->
     <section id="home">
        <div class="overlay"></div>
          <div class="container">
               <div class="row">
                    <div class="col-md-12 col-sm-12">
                         <div class="home-info">
                              <h1 id="a_title" name="thetitle">Welcome to CU Par!<br>Please enter your information here!</h1>
                              <h1></h1>
                              <div class="subscribe-form">
                                <form name="register" method="POST" id="sub" action="http://localhost:8081/signup">  
                                   {{#if this.info}}
                                 <div class="my-notify-info">{{this.info}}</div>
                                 {{else if this.message}}
                                 <div class="my-notify-success">{{this.message}}</div>
                                 {{else if this.warning}}
                                 <div class="my-notify-warning">{{this.warning}}</div>
                                 {{else}}
                                 <div class="my-notify-error">{{error}}</div>
                                 {{/if}}
                                 <br>
                                 <input type="hidden" name="action" value="register" />

                                 <input type="text" name="sid" class="form-control" placeholder="Fill in your student ID" required="" id="sid" maxlength="10", minlength="10" onblur="checksid(this)"><br>

                                 <input type="text" name="username" class="form-control" placeholder="Create your username" required="" id="username" maxlength='20'><br>

                                 <div class="col-xs-6">
                                  <input type='text' name="code" class="form-control-my" placeholder="   code" required="" id="code" maxlength="6"></div>
                                 <div class="col-xs-1"></div>
                                 <div class="col-xs-5">
                                 <input type="button" name="sendcode" class="form-control-my" id="sendcode" value="Send" onclick="getInfo()" >
                                 </div><br><br><br>
                                 
                                 <div class="new-form">
                                  <span class="text">Password length should between 6 to 20</span>
                                  <input type="password" name="password" class="form-control" placeholder="Create your password" required="" id="password" maxlength="20" minlength="6"> 
                                 </div><br>

                                 <input type="password" name="passwordRP" class="form-control" placeholder="Re-enter your password" required="" id="re-password" maxlength="20" minlength="6"><br>
                                  
                                <input type="submit" value="submit" class="form-control" id="bt" />
                               </form>
                              </div>
                              <p style="color:white"><br>Have account already? Click <a href="login">here</a> to log in</p>
                              </div>    
                         </div>
                    </div>
               </div>
          </div>
     </section>

     <!-- SCRIPTS -->
     <script src="http://localhost:8081/js/jquery.js"></script>
